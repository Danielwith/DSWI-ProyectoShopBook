        setTimeout(inputvalue, 3000);
        function inputvalue() {
            let d = document.getElementById("total");
            let c = document.getElementsByTagName("tr");
            let sumtotal = 0;
            try {
                for (let i = 1; i < c.length; i++) {
                    sumtotal += parseInt(c[i].childNodes[4].firstChild.textContent);
                }
            }
            catch {
            }

            d.value = sumtotal;
        }

